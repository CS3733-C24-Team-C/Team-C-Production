// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Nodes {
  nodeID    String     @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  NodeType
  longName  String
  shortName String
  requests  Requests[]
}

model Edges {
  edgeID    String @id
  startNode String
  endNode   String
  weight    Float
}

enum NodeType {
  ELEV
  REST
  STAI
  DEPT
  LABS
  INFO
  CONF
  EXIT
  RETL
  SERV
  HALL
}

model Requests {
  id           Int           @id @default(autoincrement())
  nodeID       String
  room         Nodes         @relation(fields: [nodeID], references: [nodeID])
  employeeID   Int           @default(0)
  employeeName Employees     @relation(fields: [employeeID], references: [employeeID])
  urgency      Urgency
  type         RequestType
  notes        String?
  compStatus   RequestStatus @default(UNSG)
}

enum Urgency {
  LOWU // low urgency
  MEDI // medium urgency
  HIGH // high urgency
}

enum RequestType {
  JANI // janitorial
  MECH // mechanical
  MEDI // medicinal
  RELC // patient relocation
  CONS // patient consultation
}

model Employees {
  employeeID Int        @id
  firstName  String
  lastName   String
  role       StaffRole
  login      String
  password   String
  requests   Requests[]
}

enum RequestStatus {
  UNSG //unassigned
  ASGN //assigned
  PROG //in Progress
  COMP //completed
}

enum StaffRole {
  REG //Regular employee
  ADM //Admin employee
}
