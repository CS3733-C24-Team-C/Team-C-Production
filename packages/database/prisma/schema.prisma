// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Nodes {
  nodeID    String   @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  NodeType
  longName  String
  shortName String
}

model Edges {
  edgeID    String @id
  startNode String
  endNode   String
  weight    Float?
}

enum NodeType {
  ELEV
  REST
  STAI
  DEPT
  LABS
  INFO
  CONF
  EXIT
  RETL
  SERV
  HALL
}
