// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Nodes {
  id        String     @id
  xCoord    Int
  yCoord    Int
  floor     String
  building  String
  type      NodeType
  longName  String
  shortName String
  requests  Requests[]
}

model Edges {
  id        String @id
  startNode String //foreign key
  endNode   String //foreign key
  weight    Float
}

enum NodeType {
  ELEV
  REST
  STAI
  DEPT
  LABS
  INFO
  CONF
  EXIT
  RETL
  SERV
  HALL
  BATH
}

model Requests {
  id               Int           @id @default(autoincrement())
  nodeId           String
  room             Nodes         @relation(fields: [nodeId], references: [id])
  employeeId       Int           @default(0)
  employeeName     Employees     @relation(fields: [employeeId], references: [id])
  urgency          Urgency
  type             RequestType
  notes            String?
  completionStatus RequestStatus @default(UNASSIGNED)
}

enum Urgency {
  LOW // low urgency
  MEDIUM // medium urgency
  HIGH // high urgency
}

enum RequestType {
  JANI // janitorial
  MECH // mechanical
  MEDI // medicinal
  RELC // patient relocation
  CONS // patient consultation
  CUST // custom request
}

model Employees {
  id        Int        @id
  firstName String
  lastName  String
  role      StaffRole
  login     String
  password  String
  requests  Requests[]
}

enum RequestStatus {
  UNASSIGNED //unassigned
  ASSIGNED //assigned
  IN_PROGRESS //in progress
  COMPLETED //completed
}

enum StaffRole {
  REGULAR //Regular employee
  ADMIN //Admin employee
}
