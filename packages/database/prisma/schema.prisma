// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Nodes {
  nodeID    String     @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  NodeType
  longName  String
  shortName String
  requests  Requests[]
}

model Edges {
  edgeID    String @id
  startNode String
  endNode   String
}

enum NodeType {
  ELEV
  REST
  STAI
  DEPT
  LABS
  INFO
  CONF
  EXIT
  RETL
  SERV
  HALL
}

model Requests {
  id      Int         @id @default(autoincrement())
  nodeID  String
  room    Nodes       @relation(fields: [nodeID], references: [nodeID])
  urgency Urgency
  type    RequestType
  notes   String?
}

enum Urgency {
  LOWU // low urgency
  MEDI // medium urgency
  HIGH // high urgency
}

enum RequestType {
  JANI // janitorial
  MECH // mechanical
  MEDI // medicinal
  RELC // patient relocation
  CONS // patient consultation
}
